def drticka(sprava):
    binarna_sprava = kodovacka(sprava)
    index = 0

    for y in range(vyska):
        for x in range(sirka):
            if index >= len(binarna_sprava):
                break  # ak je index dlhsi ako binarna sprava, tak skoncime

            r, g, b = pixels[x, y]  # rozdelime na R, G, B


            if b % 2 == 0:
                if binarna_sprava[index] == 1:
                    novy_b = b + 1 #ak je b parny, tak do noveho b pridame 1
                else:
                    novy_b = b
            else:
                if binarna_sprava[index] == 0:
                    novy_b = b - 1
                else:
                    novy_b = b

            pixels[x, y] = (r, g, novy_b)
            index += 1

        if index >= len(binarna_sprava):
            break

    img.save("zakodovane.png")
