def desifrovacka(pocet_znakov):
    bity = []
    index = 0
    celkovy_pocet_bitov = pocet_znakov * 8
    for y in range(vyska):
        for x in range(sirka):
            if index >= celkovy_pocet_bitov:
                break

            r, g, b = pixels[x, y]

            
            if b % 2 == 0:      # posledny bit z modrej
                bity.append(0)
            else:
                bity.append(1)

            index += 1

        if index >= celkovy_pocet_bitov:
            break

    
    sprava = ""    # bity na znaky
    for i in range(0, len(bity), 8):
        bajt = bity[i:i+8]
        hodnota = 0
        for bit in bajt:
            hodnota = hodnota * 2 + bit
        sprava += chr(hodnota)

    return sprava
